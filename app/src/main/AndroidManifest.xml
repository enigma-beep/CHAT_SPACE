<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mychatbox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".QueryChat"
            android:label="@string/title_activity_query_chat"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QueryUsers"
            android:label="@string/title_activity_query_users"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QueryRegister"
            android:label="@string/title_activity_query_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QueryResister"
            android:label="@string/title_activity_query_resister"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>